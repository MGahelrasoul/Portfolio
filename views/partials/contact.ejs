<section class="hero" id="contact">
    <div class="contact-inner">
            <h2 class="hero-title animated">Contact</h2>
            <div class="hero-line animated"></div>
        <div class="contact-form">
                <form action="/contact" method="POST" enctype = "multipart/form-data" id="contact-form">
                    <div class="form-group form-split animated">
                        <input class="form-item" type="text" name="name" placeholder="Name" required>
                    </div>
                    <div class="form-group form-split animated">
                        <input class="form-item" type="email" name="email" placeholder="Email" required>
                    </div>
                    <div class="form-group animated">
                        <input class="form-item" type="text" name="subject" placeholder="Subject" required>
                    </div>
                    <div class="form-group animated">
                        <textarea class="form-item" name="message" rows="10" placeholder="Your Message" required></textarea>
                    </div>
                    <div class="form-group animated">
                        <button class="btn btn-lg btn-primary" type="submit" value="submit">Submit</button>
                    </div>
                </form>
            </div>
    </div>
</section>