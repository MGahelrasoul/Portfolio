<%- include('./partials/header') %>

<div class="main fadeInDown">
    <div class="inner-main">
        <div class="posts">
            <div class="">
                <div class="title post-title">Create New Post</div>
            </div>

            <div class="post-form">
                <div class="">
                    <form action="/techblog/blogs" method="POST">
                        <label class="form-label">Title</label>
                        <div class="form-group">
                            <input class="form-item" type="text" name="blog[title]" placeholder="Post Title...">
                        </div>
                        <label class="form-label">Image</label>
                        <div class="form-group">
                            <input class="form-item" type="text" name="blog[image]" placeholder="Image URL...">
                        </div>
                        <label class="form-label">Post</label>
                        <div class="form-group">
                            <textarea class="form-item" name="blog[body]" rows="10" placeholder="Post text..."></textarea>
                        </div>
                        <div class="form-group">
                                <button class="btn btn-lg btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<%- include('./partials/footer') %>