<section class="hero" id="contact-hero">
    <div class="contact-inner">
        <div class="hero-title">
            <h2 class="">Contact</h2>
            <div class="hero-line"></div>
        </div>
        <div class="contact-form">
            <div class="">
                <form action="/contact" method="POST">
                    <div class="form-group">
                        <label class="form-label">Name</label>
                        <input class="form-item" type="text" name="name" placeholder="Mr. Smith" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input class="form-item" type="text" name="email" placeholder="MisterSmith@generic.com" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Message</label>
                        <textarea class="form-item" name="message" rows="10" placeholder="Message text..." required></textarea>
                    </div>
                    <div class="form-group">
                            <button class="btn btn-lg btn-primary" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

